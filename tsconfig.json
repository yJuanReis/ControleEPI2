// tsconfig.json
// Este arquivo configura o compilador TypeScript para o seu projeto.
// Adicionamos 'baseUrl' e 'paths' para resolver os aliases de caminho, como '@/' para 'src/'.
{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src", // Define a base para a resolução de módulos
    "paths": {
      "@/*": ["*"] // Mapeia '@/' para a pasta 'src/'
    }
  },
  "include": [
    "src"
  ]
}